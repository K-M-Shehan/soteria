<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTurnOnSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On System"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/btnTurnOffSystem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off System"
        android:layout_below="@id/btnTurnOnSystem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnTurnOnBuzzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn On Buzzer"
        android:layout_below="@id/btnTurnOffSystem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:id="@+id/btnTurnOffBuzzer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Turn Off Buzzer"
        android:layout_below="@id/btnTurnOnBuzzer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
